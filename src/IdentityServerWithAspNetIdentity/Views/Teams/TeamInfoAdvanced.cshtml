@model SingleTeam
@using IdentityServer.Domain
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = Model.Team.Name;
}

<h1>@ViewData["Title"] - @Model.Team.Description</h1>
<h2>
    Team Leader :
    @if (Model.TeamLeader != null)
    {
        <a asp-controller="Employees" asp-action="EmployeeInfo" asp-route-id="@Model.TeamLeader.Id">@Model.TeamLeader.Name</a>
    }
</h2>
<div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Active</th>
                    </tr>
                </thead>
                <tbody>
                @{
                    var employeesList = Model.Team.Employees.ToList();
                    int count = 1;
                    @if (employeesList.Count != 0)
                    {
                        foreach (var employee in employeesList)
                        {
                            @if (employee != Model.TeamLeader)
                            {
                                <tr>
                                    <td scope="row">
                                        @if (this.User.IsInRole(Constants.TeamLeaderRole))
                                        {
                                            <a asp-controller="Employees" asp-action="EmployeeInfoFromTeamLeader" asp-route-id="@employee.Id">@employee.Name</a>
                                        }
                                        else if (this.User.IsInRole(Constants.DepartmentManagerRole))
                                        {
                                            <a asp-controller="Employees" asp-action="EmployeeInfoFromDepartmentManager" asp-route-id="@employee.Id">@employee.Name</a>
                                        }
                                        else if (this.User.IsInRole(Constants.GeneralManagerRole))
                                        {
                                            <a asp-controller="Employees" asp-action="EmployeeInfoFromGeneralManager" asp-route-id="@employee.Id">@employee.Name</a>
                                        }
                                        else if (this.User.IsInRole(Constants.OfficeManagerRole))
                                        {
                                            <a asp-controller="Employees" asp-action="EmployeeInfoFromOfficeManager" asp-route-id="@employee.Id">@employee.Name</a>
                                        }
                                    </td>
                                    <td scope="row">
                                        @employee.Active
                                    </td>
                                    <td>
                                        @{
                                            var simpleName = "delete" + count++;
                                            var complexName = "#" + simpleName;
                                        }
                                        <a asp-action="EmployeeEditOnTeam" asp-controller="Employees" asp-route-id="@employee.Id">Edit</a> |
                                        <a href="@complexName" id="@complexName" class="trigger-btn" data-toggle="modal">Delete</a>
                                        <div id="@simpleName" class="modal fade">
                                            <div class="modal-dialog modal-confirm">
                                                <div class="modal-content">
                                                    <div class="modal-body">
                                                        <h4>Do you really want to delete this record? It cannot be undone.</h4>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <a asp-action="EmployeeDelete" asp-route-id="@employee.Id"><button type="button" class="btn btn-danger"><span class="glyphicon glyphicon-ok"></span> Delete</button></a>
                                                        <button type="button" class="btn btn-info" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    }
                }
                </tbody>
            </table>
            <a asp-action="TeamEdit" asp-route-id="@Model.Team.Id">Edit this Team</a>
            <br />
            <a asp-action="ManageTeams">Back to all Teams</a>
        </div>
    </div>
</div>