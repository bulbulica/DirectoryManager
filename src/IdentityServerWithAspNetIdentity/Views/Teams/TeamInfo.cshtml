@model SingleTeam
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = Model.Team.Name;
}

<h1>@ViewData["Title"] - @Model.Team.Description</h1>
<h2>
    Team Leader :
    @{ if (Model.TeamLeader != null)
        {
       <a asp-action="EmployeeInfo" asp-controller="Employees" asp-route-id="@Model.TeamLeader.Id">@Model.TeamLeader.Name</a>
            }
        }

</h2>
<div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                    </tr>
                </thead>
                <tbody>
                @{var employeesList = Model.Team.Employees.ToList();
                    @if (employeesList.Count != 0)
                    {
                        foreach (var employee in employeesList)
                        {
                            @if (employee != Model.TeamLeader)
                            {
                            <tr>
                                <td scope="row">
                                    <a asp-action="EmployeeInfo" asp-controller="Employees" asp-route-id="@employee.Id">@employee.Name</a>
                                </td>
                                </tr>
                                }
                            }
                    }
                }
                </tbody>
            </table>
            <a asp-action="TeamEdit" asp-route-id="@Model.Team.Id">Edit this Team</a>
            <br />
            <a asp-action="ManageTeams">Back to all Teams</a>
        </div>
    </div>
</div>