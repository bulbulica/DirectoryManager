@model SingleTeam
@using IdentityServer.Domain
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = Model.Team.Name;
}

<h1>@ViewData["Title"] - @Model.Team.Description</h1>
<h2>
    Team Leader :
    @if (Model.TeamLeader != null)
    {
        <a asp-controller="Employees" asp-action="EmployeeInfo" asp-route-id="@Model.TeamLeader.Id">@Model.TeamLeader.Name</a>
    }
</h2>
<div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Position</th>
                        <th scope="col">Active</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var employeesList = Model.Team.Employees.ToList();
                        @if (employeesList.Count != 0)
                        {
                            foreach (var employee in employeesList)
                            {
                                @if (employee != Model.TeamLeader)
                                {
                                    <tr>
                                        <td scope="row">
                                            @if (this.User.IsInRole(Constants.TeamLeaderRole))
                                            {
                                                <a asp-controller="Employees" asp-action="EmployeeInfoFromTeamLeader" asp-route-id="@employee.Id">@employee.Name</a>
                                            }
                                            else if (this.User.IsInRole(Constants.DepartmentManagerRole))
                                            {
                                                <a asp-controller="Employees" asp-action="EmployeeInfoFromDepartmentManager" asp-route-id="@employee.Id">@employee.Name</a>
                                            }
                                            else if (this.User.IsInRole(Constants.GeneralManagerRole))
                                            {
                                                <a asp-controller="Employees" asp-action="EmployeeInfoFromGeneralManager" asp-route-id="@employee.Id">@employee.Name</a>
                                            }
                                            else if (this.User.IsInRole(Constants.OfficeManagerRole))
                                            {
                                                <a asp-controller="Employees" asp-action="EmployeeInfoFromOfficeManager" asp-route-id="@employee.Id">@employee.Name</a>
                                            }
                                        </td>
                                        <td scope="row">
                                            @employee.Position.RoleName
                                        </td>
                                        <td scope="row">
                                            @employee.Active
                                        </td>
                                    </tr>
                                }
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>