@model AssignTeamLeader

@{
    ViewData["Title"] = "Assign Team Leader to " + Model.Team.Name;
}

<script type="text/javascript" src="~/js/autocomplete.js"></script>

<script type="text/javascript">

                             var employees = [];
                @foreach (var employee in Model.Employees.ToList())
                {
                    <text>
                        employees.push("@employee.Name");
                    </text>
                }
</script>

<h3>Add Students to activity: @Model.Team.Name</h3>

<div class="row">
    <div class="col-md-4">
        <form autocomplete="off" asp-action="AssignTeamLeader">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Team.Id" value="@Model.Team.Id" class="form-control" />

            </br>
            <div class="autocomplete" style="width:300px;">
                <input class="form-control" id="inputList" type="text" placeholder="Employee" autocomplete="off">
            </div>
            <div class="form-group">

                <input type="submit" value="Add" class="btn btn-default" />

            </div>
        </form>
    </div>
</div>
<div>
    <br />
    <a asp-route="ManageTeam">Back to team list</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
<script>
    autocomplete(document.getElementById("inputList"), employees);
</script>