@model AddCVEmployee
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Add CV to " + Model.Name;
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EmployeeAddCV" method="post">
            <div asp-validation-summary="All" class="text-danger hidden"></div>
            <input type="hidden" asp-for="Id" value="@Model.Id" class="form-control" />
            <div class="form-group">
                <label asp-for="CV" class="control-label"></label>
                <input type='file' asp-for="CV" />
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
        <a asp-action="EmployeeInfo" asp-route-id="@Model.Id"><h3>Back to employee info</h3></a>
    </div>
</div>