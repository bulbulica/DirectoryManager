@model EditEmployee
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit Employee";
}
<h1>@ViewData["Title"] @Model.Name</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EmployeeEditOnTeam" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" value="@Model.Id" class="form-control" />
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <br />
                <select asp-for="Position" id="mainselection">
                @{
                    if (Model.AllPositions.ToList().Count != 0)
                    {
                        var rolesList = Model.AllPositions.ToList();
                        foreach (var role in rolesList)
                        {
                            <option>@role.RoleName</option>
                        }
                    }
                }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>