@model SingleEmployee
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = Model.Name;
}
<h4>@ViewData["Title"]</h4>
<div>
    <h4>View all his data</h4>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <img src="@Model.Picture" class="rounded float-left" alt="@Model.Name">
        </div>
        <div class="col-md-6">
            <h2>@Model.Name - @Model.Role</h2>
            <h4>Department - @Model.Department.Name</h4>
            <h4>Team - @Model.Team.Name</h4>
            <h2>Active - @Model.Active</h2>
            <a asp-action="ManageEmployees">Back too all Employees</a>
        </div>
    </div>
</div>