@model AllEmployees
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Manage Employees";
}
<div>
    <h3>Manage all the employees</h3>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Department</th>
                        <th scope="col">Team</th>
                        <th scope="col">Active</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var employeesList = Model.Employees.ToList();
                        if (employeesList.Count != 0)
                        {
                            foreach (var employee in employeesList)
                            {
                                <tr>
                                    <td scope="row">
                                        <a asp-action="EmployeeInfo" asp-route-id="@employee.Id">@employee.Name</a>
                                    </td>
                                    <td scope="row">
                                        @if (employee.Department != null)
                                        {
                                            @employee.Department.Name
                                        }
                                        </td>
                                    <td scope="row">
                                        @if (employee.Team != null)
                                        {
                                            @employee.Team.Name
                                        }
                                    </td>
                                    <td scope="row">@employee.Active</td>
                                    <td>
                                        <a asp-action="EmployeeEdit" asp-route-id="@employee.Id">Edit</a> |
                                        <a href="#myModal" id="#myModal" class="trigger-btn" data-toggle="modal">Delete</a>
                                        <!-- Modal HTML -->
                                        <div id="myModal" class="modal fade">
                                            <div class="modal-dialog modal-confirm">
                                                <div class="modal-content">
                                                    <div class="modal-body">
                                                        <h4>Do you really want to delete this record? It cannot be undone.</h4>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("List", "Search")'"><span class="glyphicon glyphicon-ok"></span> Delete</button>
                                                        <!--<a asp-action="EmployeeDelete" asp-route-id="@employee.Id" class="delete">Delete</a>-->
                                                        <button type="button" class="btn btn-info" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
            <a asp-action="EmployeeAdd">Add new Employee</a>
        </div>
    </div>
</div>