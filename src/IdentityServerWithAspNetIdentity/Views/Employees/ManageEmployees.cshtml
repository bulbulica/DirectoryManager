@model AllEmployees
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Manage Employees";
}
<script type="text/javascript" src="~/lib/bootstrap/js/bootstrap.js"></script>
<script type="text/javascript" src="~/lib/jquery/jquery.js"></script>


<h2>All Employees</h2>
<div>
    <h4>Manage all the employees</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Department</th>
                        <th scope="col">Team</th>
                        <th scope="col">Active</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var employeesList = Model.Employees.ToList();
                        if (employeesList.Count != 0)
                        {
                            foreach (var employee in employeesList)
                            {
                    <tr>
                        <td scope="row">
                            <a asp-action="EmployeeInfo" asp-route-id="@employee.Id">@employee.Name</a>
                        </td>
                        <td scope="row">
                            @if (employee.Department != null)
                            {
                                @employee.Department.Name
                            }
                        </td>
                        <td scope="row">
                            @if (employee.Team != null)
                            {
                                @employee.Team.Name
                            }
                        </td>
                        <td scope="row">@employee.Active</td>
                        <td>
                            <a asp-action="EmployeeEdit" asp-route-id="@employee.Id">Edit</a> |
                            <a href="#myModal" id="#myModal" class="trigger-btn" data-toggle="modal">Delete</a>
                            <!-- Modal HTML -->
                            <div id="myModal" class="modal fade">
                                <div class="modal-dialog modal-confirm">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h4 class="modal-title">Are you sure?</h4>
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        </div>
                                        <div class="modal-body">
                                            <p>Do you really want to delete these records? This process cannot be undone.</p>
                                        </div>
                                        <div class="modal-footer">
                                            <a asp-action="DeleteEmployee" asp-route-id="5" class="btn btn-danger">Delete</a>
                                            <button type="button" class="btn btn-info" data-dismiss="modal">Cancel</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                            }
                        }
                    }
                </tbody>
            </table>
            <a asp-action="EmployeeAdd">Add new Employee</a>
        </div>
    </div>
</div>

<script>
    $('.openBtn').on('click', function () {
        $('.modal-body').load('getContent.php?id=2', function () {
            $('#myModal').modal({ show: true });
        });
    });
</script>